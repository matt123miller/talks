---
import Talk from "../../layouts/Talk.astro";
import portrait from "./assets/art-portrait.jpg";
import oldMovie from "./assets/old-film.jpg";
import newMovie from "./assets/new-film.jpg";
import currentCharacters from "./assets/current-characters.jpg";
import youngMe from "./assets/young-me.jpeg";
---

<Talk title="D&D for Professional Growth">
  <section>
    <h2>Dungeons and Dragons for Professional Growth</h2>
  </section>
  <section>
    <h2>Hello <strike>Wembley</strike> Colchester!</h2>
  </section>
  <section>
    <h2>Matt Miller</h2>
    <div style="display: grid;grid-template-columns: 1fr 1fr;">
      <div>
        <img src={portrait} alt="" srcset="" />
      </div>
      <div style="display: flex;align-items: center;">
        <ul>
          <li>He/Him</li>
          <li>Local web developer</li>
          <li>"He's like the office puppy, isn't he?"</li>
        </ul>
      </div>
    </div>
  </section>
  <section>
    <h2>Definitions</h2>
    <ul>
      <li>Dungeons and Dragons (dnd)</li>
      <li>Dungeon Master (DM)</li>
      <li>Player</li>
    </ul>
  </section>
  <section>
    <h2>Storytelling, Creativity and Collaboration</h2>
  </section>
  <section>
    <img class="r-stretch" src={oldMovie} />
    <div>
      <h3>Not that one...</h3>
    </div>
  </section>
  <section>
    <img class="r-stretch" src={newMovie} />
  </section>
  <section>
    <h2>Roleplay and Empathy</h2>
  </section>
  <section>
    <img style="transform: scale(1.2);" src={currentCharacters} alt="" />
  </section>
  <section>
    <h2>People Skills</h2>
  </section>
  <section>
    <img
      src={youngMe}
      class="r-stretch"
      style="transform: rotate(-90deg);"
      alt=""
    />
  </section>
  <section>
    <h2>Establishing Expectations</h2>
  </section>
  <section>
    <h2>Failure</h2>
  </section>
  <section>
    <h2>Listening Skills</h2>
  </section>
  <section>
    <h2>Questions?</h2>
  </section>
  <section>
    <h3>Thanks</h3>
    <div style="display: grid;grid-template-columns: 1fr 1fr;">
      <div>
        <img data-src="./assets/ddg-me.png" alt="" />
      </div>
      <div>
        <img data-src="./assets/qr-code.png" alt="" srcset="" />
      </div>
    </div>
    <div>
      <a href="https://m11r.dev">www.m11r.dev</a>
    </div>
  </section>
</Talk>
